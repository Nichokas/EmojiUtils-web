---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
<head>
	<meta charset="UTF-8" />
	<meta name="viewport" content="width=device-width" />
	<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
	<meta name="generator" content={Astro.generator} />
	<title>{title} - EmojiUtils</title>
</head>
<body class="bg-[#ffffff] text-[#1d1d1f]">
<header class="border-b border-[#86868b]/10">
	<nav class="max-w-6xl mx-auto px-4 py-4 flex justify-between items-center">
		<a href="/" class="text-xl font-semibold">EmojiUtils</a>
		<div class="space-x-6">
			<a href="/privacy-policy" class="text-[#0066CC] hover:underline">Privacy Policy</a>
			<a href="/support" class="text-[#0066CC] hover:underline">Support</a>
		</div>
	</nav>
</header>
<main>
	<slot />
</main>
<footer class="border-t border-[#86868b]/10 mt-20 py-8">
	<div class="max-w-6xl mx-auto px-4 text-center text-[#86868b]">
		<p>&copy; {new Date().getFullYear()} Nicolas Rodriguez - MIT license.</p>
	</div>
</footer>
</body>
</html>