---
interface Props {
    href: string;
}

const { href } = Astro.props;
---

<a
        href={href}
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center px-6 py-3 rounded-lg bg-apple-blue dark:bg-apple-blue-dark hover:bg-[#0077ED] dark:hover:bg-[#1D8EFF] transition-colors duration-200"
>
    <svg class="w-5 h-5 mr-2" viewBox="0 0 24 24" fill="white" xmlns="http://www.w3.org/2000/svg">
        <!-- ... SVG path ... -->
    </svg>
    <span class="text-white font-semibold">Download on the App Store</span>
</a>